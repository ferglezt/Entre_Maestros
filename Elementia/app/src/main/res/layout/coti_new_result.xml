<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/marginCenter"
        android:background="@drawable/background_gray"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/marginHorizontal"
        android:layout_marginBottom="40dp"
        >

        <TextView
            fontPaht="fonts/flama_condensed_bold.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/resultiCoti"
            android:textSize="@dimen/titleTextSize"
            android:textStyle="bold"
            tools:ignore="MissingPrefix" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/marginVertical"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/subtotal" />

            <EditText
                android:id="@+id/edit_subtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_edittext"
                android:enabled="false"
                android:hint="$ 10,000.00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/marginVertical"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/total" />

            <EditText
                android:id="@+id/edit_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_edittext"
                android:enabled="false"
                android:hint="$11,600.00" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/coti_btn_ver"
            fontPath="fonts/flama_condensed_basic.otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/marginHorizontal"
            android:alpha="0.9"
            android:backgroundTint="@color/colorButtonBlue"
            android:paddingLeft="@dimen/paddingBtnMenu"
            android:text="@string/verCoti"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/colorEdit"
            android:textSize="@dimen/textButtonSize"
            tools:ignore="MissingPrefix" />

        <ImageView
            android:layout_width="@dimen/icWidthMenu"
            android:layout_height="@dimen/icHeigthMenu"
            android:layout_alignLeft="@id/coti_btn_ver"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/imageMargingMenu"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:elevation="8dp"
            android:padding="@dimen/imagePaddingMenu"
            android:scaleType="fitCenter"
            android:src="@mipmap/visualizarcotizacion" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/coti_btn_save"
            fontPath="fonts/flama_condensed_basic.otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/marginHorizontal"
            android:alpha="0.9"
            android:backgroundTint="@color/colorButtonBlue"
            android:paddingLeft="@dimen/paddingBtnMenu"
            android:text="@string/save"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/colorEdit"
            android:textSize="@dimen/textButtonSize"
            tools:ignore="MissingPrefix" />

        <ImageView
            android:layout_width="@dimen/icWidthMenu"
            android:layout_height="@dimen/icHeigthMenu"
            android:layout_alignLeft="@id/coti_btn_save"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/imageMargingMenu"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:elevation="8dp"
            android:padding="@dimen/imagePaddingMenu"
            android:scaleType="fitCenter"
            android:src="@mipmap/guardar" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/coti_btn_down"
            fontPath="fonts/flama_condensed_basic.otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/marginHorizontal"
            android:alpha="0.9"
            android:backgroundTint="@color/colorButtonBlue"
            android:paddingLeft="@dimen/paddingBtnMenu"
            android:text="@string/download"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/colorEdit"
            android:textSize="@dimen/textButtonSize"
            tools:ignore="MissingPrefix" />

        <ImageView
            android:layout_width="@dimen/icWidthMenu"
            android:layout_height="@dimen/icHeigthMenu"
            android:layout_alignLeft="@id/coti_btn_down"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/imageMargingMenu"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:elevation="8dp"
            android:padding="@dimen/imagePaddingMenu"
            android:scaleType="fitCenter"
            android:src="@mipmap/descargar"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/home_btn_login"
            fontPath="fonts/flama_condensed_basic.otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/marginHorizontal"
            android:alpha="0.9"
            android:backgroundTint="@color/colorButtonBlue"
            android:paddingLeft="@dimen/paddingBtnMenu"
            android:text="@string/send"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/colorEdit"
            android:textSize="@dimen/textButtonSize"
            tools:ignore="MissingPrefix" />

        <ImageView
            android:layout_width="@dimen/icWidthMenu"
            android:layout_height="@dimen/icHeigthMenu"
            android:layout_alignLeft="@id/home_btn_login"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/imageMargingMenu"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:elevation="8dp"
            android:padding="@dimen/imagePaddingMenu"
            android:scaleType="fitCenter"
            android:src="@mipmap/enviar" />
    </RelativeLayout>
</LinearLayout>